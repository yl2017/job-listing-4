


<div class="pull-right">
  <%= link_to("+", new_admin_job_path, :style => "font-size: 40px;") %>
</div>

<br><br>

<table class="table table-boldered table-striped custab" >
  <thead>
    <tr>
      <td class="tdtext">
        职缺
      </td>
      <td class="tdtext">
        收到履历数量
      </td>
      <td class="tdtext">
        薪资下限
      </td>
      <td class="tdtext">
        薪资上限
      </td>
      <td class="tdtext">
        管理选项
      </td>
      <td class="tdtext">
        刊登时间
      </td>
    </tr>
  </thead>
  <% @jobs.each do |job| %>
  <tr>
    <td class="tdtext">
      <%= render_job_status(job) %>
      <%= link_to(job.title, admin_job_path(job)) %>
    </td>
    <td class="tdtext"> <%= link_to(job.resumes.count, admin_job_resumes_path(job)) %> </td>
    <td class="tdtext"> <%= job.wage_lower_bound %> </td>
    <td class="tdtext"> <%= job.wage_upper_bound %> </td>
    <td>
      <%= link_to("", edit_admin_job_path(job), :class => "fa fa-pencil") %>
      <%= link_to("", admin_job_path(job), :method => :delete, :class => "fa fa-trash", :data => { :confirm => "Are you sure?" }) %>
      <% if job.is_hidden %>
        <%= link_to("", publish_admin_job_path(job) , :method => :post, :class => "fa fa-unlock") %>
      <% else %>
        <%= link_to("", hide_admin_job_path(job), :method => :post,  :class => "fa fa-lock") %>
      <% end %>
    </td>
    <td class="tdtext">
      <%= job.created_at %>
    </td>
  </tr>
  <% end %>

</table>
